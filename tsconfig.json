{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "./build",
        "baseUrl": "./",
        "paths": {
          "@/*": ["src/*"],
          "@/tests/*": ["tests/*"]
        },
    },
    "include": ["src", "tests"],
    "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
